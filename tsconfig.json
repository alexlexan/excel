{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es5",
      "noImplicitAny": true,
      "removeComments": true,
      "sourceMap": true,
      "baseUrl": "./",
      "paths": {
        "@/*": ["src/*"],
        "@core/*": ["src/core/*"]
      }
    },
    "exclude": [
      "node_modules"
    ],
    "include": [
      "./src/**/*"
    ]
  }